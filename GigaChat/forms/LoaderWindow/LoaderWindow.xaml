        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GigaChat"
        mc:Ignorable="d"
        Title="Loader" Height="350" Width="300" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF252525">
        <Label Content="идет загрузка..." HorizontalAlignment="Center" Margin="42,257,39,39" RenderTransformOrigin="0.497,0.468" Width="211" Foreground="White" FontFamily="Comic Sans MS" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <ProgressBar x:Name="loaderBar" HorizontalAlignment="Left" Height="24" Margin="42,303,0,0" VerticalAlignment="Top" Width="211"  Background="#FFA0A0A0" Foreground="Lime" Loaded="loadProgress_complete"/>

    </Grid>
</Window>
